<div class="container">

  <div class="row">
    <div class="col-5">

    </div>
    <div class="col-4">

      <h1 class="justify-content-center">Burgers!</h1>
    </div>

  </div>

  <div class="row">

    <div class="col-4">
      <hr>
      <h2>Uneaten Burgers!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <p>{{id}}.{{burger_name}}</p>
        {{> burger/eatbutton devoured=true}}

        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-4">
      <hr>

      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burgerName">Burger Name:</label>
          <input type="text" id="burg" name="name">
        </div>

        <div class="form-group">
          <label for="burg">Devoured</label><br>
          <input type="radio" name="devoured" value="0" checked> Not-Devoured
          <input type="radio" name="devoured" value="1"> Not-Devoured

        </div>

        <button type="submit" id="submitButton">Add Burger</button>
      </form>
    </div>
    <div class="col-4">
      <hr>
      <h2>Burgers that have been eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <p>{{id}}.{{burger_name}}</p>


        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>