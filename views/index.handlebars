<h1>Burgers!</h1>

<h2>Uneaten Burgers!</h2>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
							<p>{{this.id}}. {{this.burger_name}}</p>

      {{!-- {{> burger/main devoured=true}} --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten!</h2>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
    							<p>{{this.id}}. {{this.burger_name}}</p>

    
      {{!-- {{this.id}}.{{this.burger_name}} --}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured</label><br>
    {{!-- <input type="radio" name="devoured" value="1" checked> Devoured!<br> --}}
    <input type="radio" name="devoured" value="0" checked> Not-Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
