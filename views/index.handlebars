<h1>Burgers!</h1>
<div class="container">
  <div class="row">

    <div class="col-4">

      <h2>Uneaten Burgers!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger/eatbutton devoured=true}}
        <p>{{id}}.{{burger_name}}</p>

        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-4">

      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burg" name="name">
        </div>

        <div class="form-group">
          <label for="burg">Devoured</label><br>
          <input type="radio" name="devoured" value="0" checked> Not-Devoured
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
    <div class="col-4">

      <h2>Burgers that have been eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <p>{{id}}.{{burger_name}}</p>


        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>